<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants" >

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_avg_duration" />

    <TextView
        android:id="@id/tv_avg_duration"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tv_sum_duration" />

    <TextView
        android:id="@id/tv_sum_duration"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btn_delete" />

    <ImageButton
        android:id="@id/btn_delete"
        style="@style/listItemButton"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/action_delete_member"
        android:src="@drawable/ic_action_delete" />

</RelativeLayout>