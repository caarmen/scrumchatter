<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <!-- need concise variable names: https://code.google.com/p/android/issues/detail?id=212492 -->
        <variable
            name="listener"
            type="ca.rmen.android.scrumchatter.meeting.detail.MeetingCursorAdapter.MemberStartStopListener" />
        <variable
            name="memberId"
            type="java.lang.Long"/>
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="@dimen/list_inner_horizontal_margin"
        android:paddingRight="@dimen/list_inner_horizontal_margin">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/iv_chatter_face"
            android:layout_toStartOf="@+id/iv_chatter_face"
            android:gravity="start"
            android:textAlignment="viewStart"
            tools:targetApi="jelly_bean_mr1" />

        <ImageView
            android:id="@id/iv_chatter_face"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@+id/tv_duration"
            android:layout_toStartOf="@+id/tv_duration"
            android:contentDescription="@string/chatter_face_label"
            android:src="@drawable/chatter_face"
            android:visibility="invisible" />

        <Chronometer
            android:id="@id/tv_duration"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/btn_start_stop_member"
            android:layout_toStartOf="@+id/btn_start_stop_member"
            android:gravity="start"
            android:textAlignment="viewStart"
            tools:targetApi="jelly_bean_mr1" />

        <ImageButton
            android:id="@id/btn_start_stop_member"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="?selectableItemBackgroundBorderless"
            android:contentDescription="@string/action_start"
            android:onClick="@{() -> listener.toggleTalkingMember(memberId)}"
            android:padding="8dp"
            android:src="@drawable/ic_action_start" />

    </RelativeLayout>
</layout>